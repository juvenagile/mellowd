<div class="show-user-container">
  <h1>Hello <%= @user.first_name %> <%= @user.last_name %>!</h1>
    <div class='user-profile-picture'>
      <% if @user.profile_picture.present? %>
        <%= cl_image_tag @user.profile_picture, alt: "Profile Picture" %>
        <p>Public ID: <%= @user.profile_picture %></p>
      <% else %>
        <%= image_tag "https://res.cloudinary.com/djuhjudsb/image/upload/v1687887823/tq49o29k_ofz8ad.png", style:'width: 150px;' , class: 'rounded', alt: "Alt Profile Picture" %>
      <% end %>
      <%= form_for @user, url: update_profile_picture_user_path(@user), method: :patch do |f| %>
        <%= f.file_field :profile_picture, class: 'btn btn-primary' %>
        <%= f.submit "Change Profile Picture", class: 'btn btn-primary' %>
      <% end %>
      <% if @user.profile_picture.present? %>
        <%= form_for @user, url: delete_profile_picture_user_path(@user), method: :delete do |f| %>
          <%= f.submit "Delete Image", class: 'btn btn-danger' %>
        <% end %>
      <% end %>
    </div>
    <div class="user-profile-buttons">
      <%= link_to "Edit Profile information", edit_user_registration_path %>
      <%= link_to "Change Password", edit_password_user_path(@user) %>
      <%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete }, class: ""  %>
    </div>
</div>

