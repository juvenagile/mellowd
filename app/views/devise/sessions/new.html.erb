<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6 p-0 m-0 d-none d-md-block">
      <!-- Add your image here -->
      <img src="https://via.placeholder.com/500x500" alt="Placeholder image" class="img-fluid p-0 m-0">
    </div>
    <div class="col-md-6">
      <h2 class="text-white text-center">Welcome back</h2>
      <h4 class="text-white text-center my-4">Log in</h4>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
        data: {turbo: false }) do |f| %>
        <div class="form-inputs border border-light rounded p-4">
        <p class="text-white text-center ">Sign in with email</p>
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: "form-control" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password", class: "form-control" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

        <div class="form-actions text-center">
          <%= f.button :submit, "Log in", class: "btn btn-primary btn-block mb-3", style: "width: 100% !important;" %>
        </div>
      <% end %>

      <%= render 'devise/shared/links' %>
        </div>
    </div>
  </div>
</div>