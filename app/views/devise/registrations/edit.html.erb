<div class="container d-flex flex-column justify-content-center align-items-center text-center text-white">
  <h2 class="display">Account Information</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="mb-3">
      <%= f.input :email, required: true, autofocus: true, label_html: { class: 'form-label' }, input_html: { class: 'form-control' } %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p class="mb-3 text-white">Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :password,
                  hint: "leave it blank if you don't want to change it",
                  required: false,
                  input_html: { class: 'form-control', autocomplete: 'new-password' },
                  hint_html: { class: 'text-white' } %>
      <%= f.input :password_confirmation,
                  required: false,
                  input_html: { class: 'form-control', autocomplete: 'new-password' } %>
      <%= f.input :current_password,
                  hint: "we need your current password to confirm your changes",
                  required: true,
                  input_html: { class: 'form-control', autocomplete: 'current-password' },
                  hint_html: { class: 'text-white' } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Update", class: 'btn btn-primary btn-lg my-2' %>
    </div>
    <div> <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: 'btn btn-link text-primary text-decoration-none' %></div>
  <% end %>
</div>
