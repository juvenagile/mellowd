<div class="container">
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3">
    <% events.each do |event| %>
      <% if event && event.persisted? %>
        <div class="col mb-4">
          <%= link_to event_path(event), class: "text-decoration-none" do %>

            <%# _event-card.html.erb %>
            <div class="event-card-container">
              <div class="event-card">
                <%= cl_image_tag event.image.key, class: "event-card-image" %>

                <div class="event-card-header">
                  <h5 class="event-card-main-title"><%= event.title %></h5>

                  <div class="event-card-user">

                    <%= cl_image_tag("tfmziqxdfzd5tltagg6o.jpg")  %>

                    <p class="event-card-second-title"><%= event.genre %></p>
                  </div>
                </div>

                <div class="event-card-details">

                  <div class="col-6 d-flex justify-content-start">
                    <div class="event-card-location">
                      <p class="event-card-second-text">Location</p>
                      <p class="event-card-main-text"><%= event.address %></p>
                    </div>
                  </div>
                  <div class="col-6 d-flex justify-content-end">
                    <div class="event-card-date">
                      <p class="event-card-second-text">Date</p>
                      <p class="event-card-main-text"><%= event.datetime %></p>
                    </div>
                  </div>
                </div>
              </div>
            </div>

          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div data-controller="hide-stuff">
    <div style="width: 100%; height: 600px; border-radius: 15px;"
    data-controller="map"
    data-hide-stuff-target="map"
    data-map-markers-value="<%= markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
    <button data-action="click->hide-stuff#toggleMap">Map</button>
  </div>
</div>
