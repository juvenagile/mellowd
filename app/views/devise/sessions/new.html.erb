<div class="new-devise-row">
  <div class="new-image-container">
    <img src="https://res.cloudinary.com/djuhjudsb/image/upload/v1687826385/development/ev4a51rwos8rls8iqe4h5lgrar5z.jpg" alt="DJ playing">
  </div>
  <div class="welcome-back-container">
    <h2>Welcome back</h2>
    <h4>Log in</h4>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
      data: {turbo: false }) do |f| %>
      <div class="new-user-form-inputs">
      <p>Sign in with email</p>
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "form-control" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password", class: "form-control" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

      <div class="form-actions text-center">
        <%= f.button :submit, "Log in", class: "btn btn-primary btn-block mb-3", style: "width: 100% !important;" %>
      </div>
    <% end %>

    <%= render 'devise/shared/links' %>
      </div>
  </div>
</div>
