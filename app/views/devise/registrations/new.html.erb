<div class="container mt-5">
  <div class="row justify-content-center">
    <h2 class="text-white text-center mb-5">Sign up</h2>
      <div class="col-md-6 border border-light rounded p-4">

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
        data: {turbo: false}) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :first_name,
                      required: true,
                      autofocus: true %>
          <%= f.input :last_name,
                      required: true,
                      autofocus: true %>
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" },
                      label_html: { class: "text-white" },
                      hint_html: { class: "text-white" } %>
          <%= f.input :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :artist, as: :boolean, label: "Are you an artist? Click here", wrapper_html: { class: "fs-5 my-4" } %>
        </div>

        <div class="row form-actions text-center">
          <%= f.button :submit, "Sign up", class: "btn btn-primary btn-lg btn-block mb-3" %>
          <%= render "devise/shared/links" %>
        </div>
      <% end %>

      </div>
  </div>
</div>