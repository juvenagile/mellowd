<%= form_with model: @newsletter_message, url: update_newsletter_message_path do |form| %>
  <div class="field">
    <%= form.label :subject %>
    <%= form.text_field :subject %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>

  <div class="actions">
    <%= form.submit "Update" %>
  </div>
<% end %>