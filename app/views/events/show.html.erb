<%= link_to events_path, class: "fs-4 text-white m-3" do %>
  <i class="fas fa-arrow-left"></i>
<% end %>

<div class="container">
  <div class="card-show">
  <% if @event.photo.attached?%>
    <%= image_tag url_for(@event.photo)%>
  <% else %>
    <%= image_tag "https://picsum.photos/seed/picsum/200/200", class: "rounded", style: "border-radius: 15px !important;" %>
  <% end %>
  </div>

  <button class="btn btn-primary my-5">Postulate Position</button>

  <div class="row">
    <div class="col-md-6 text-white fs-5 lh-lg d-flex justify-content-center">
      <%= render @event %>

      <% if policy(@event).edit? %>
        <%= link_to edit_event_path(@event) do %>
          <i class="fa-regular fa-pen-to-square text-white"></i>
        <% end %>
      <% end %>

      <% if policy(@event).destroy? %>
        <%= button_to @event, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger", style: "background-color: transparent; border-color: transparent;" do %>
          <i class="fa-regular fa-trash-can text-white"></i>
        <% end %>
      <% end %>
    </div>

    <div class="rounded col-md-6">
      <div style="width: 100%; height: 600px;"
        data-controller="map"
        data-map-markers-value="<%= @marker.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
    </div>
  </div>
</div>
